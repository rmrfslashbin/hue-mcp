# Philips Hue Bridge Configuration
HUE_BRIDGE_IP=192.168.50.27
HUE_API_KEY=your_hue_api_key_here

# MCP Transport Configuration  
MCP_TRANSPORT=stdio  # Use 'http' for Cantrip integration, 'stdio' for Claude Desktop
MCP_HOST=0.0.0.0     # Only used in HTTP mode
MCP_PORT=8080        # Only used in HTTP mode

# Optional Configuration
HUE_SYNC_INTERVAL_MS=300000  # 5 minutes
HUE_ENABLE_EVENTS=false
NODE_TLS_REJECT_UNAUTHORIZED=0
LOG_LEVEL=info